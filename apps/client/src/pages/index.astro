---
import { StarIcon } from 'lucide-react'
import SearchBar from '../components/SearchBar.jsx'
import StarStopsList from '../components/StarStopsList.jsx'
import Layout from '../layouts/Layout.astro';
---

<Layout title="Tu Parada" className="bg-blue-100">
  <header class="flex flex-col gap-4 font-serif w-full py-12 bg-blue-600 text-white">
    <h1 class="font-bold text-2xl text-center">Tu Parada</h1>
    <p class="text-lg text-balance text-center">Guarda un acceso directo a tu parada y consúltalo de forma rápida y sencilla!</p>
    <section class="max-w-[80ch] m-auto flex flex-col items-center justify-center">
      <SearchBar client:load/>
    </section>
  </header>
  <main class="h-screen py-4 max-w-[80ch] m-auto px-4 flex flex-col gap-4">
    <section>
      <h2 class="text-2xl font-bold">Paradas buscadas recientemente</h2>
    </section>
    <section>
      <h2 class="text-2xl font-bold flex flex-row gap-2 items-center mb-2">
        <StarIcon className='inline text-blue-800' size={32}></StarIcon>
        Paradas favoritas
      </h2>
      <StarStopsList client:load></StarStopsList>
    </section>
  </main>
</Layout>
